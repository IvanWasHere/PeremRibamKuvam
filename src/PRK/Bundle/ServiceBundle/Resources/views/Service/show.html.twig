{% extends '::base.html.twig' %}

{% block body -%}






    <div class="ui grid">

        <div class="ten wide column centered">
            <h2>{{ entity.name }}</h2>

            <p>{{ entity.description }}</p>

        </div>
        <div class="six wide column centered">
            <span>{{ entity.price }}</span>

            <span>Lokacija: {{ entity.location }}</span>

            <p>Objavljeno: {{ entity.created|date('d-m-Y') }}</p>

        </div>
    </div>







    <table class="record_properties">
        <tbody>
            <tr>
                <th>User</th>
                <td>{{ entity.user }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ entity.location }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('service') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('service_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
